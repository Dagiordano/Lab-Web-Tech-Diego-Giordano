<div class="card mb-3">
  <div class="card-body">
    <p>
      <strong>Body:</strong>
      <%= comment.body %>
    </p>
    <p>
      <strong>User Id:</strong>
      <%= comment.user_id %>
    </p>
    
    <% if user_signed_in? && current_user == comment.user %>
      <div class="d-flex justify-content-end mt-3">
        <%= link_to "Edit comment", edit_post_comment_path(comment.post, comment), class: "btn btn-outline-info btn-sm me-2" %>
        <%= link_to "Destroy", post_comment_path(comment.post, comment), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
      </div>
    <% end %>
  </div>
</div>
