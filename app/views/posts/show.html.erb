<h1><%= @post.title %></h1>

<p><%= @post.user.name %></p>


<p><%= @post.content %></p>

<p>
    <% @post.tags.each do |tag| %>
    <%= tag.name %>
  <% end %>


<h2>Comments</h2>
<%= render @post.comments%>
    


<%= button_to "Add Comment", new_post_comment_path(@post), remote: true, method: :get %>





<button type="button" class="btn btn-outline-info mt-4"><%= link_to "Edit", edit_post_path(@post) %></button>

<button type="button" class="btn btn-outline-secondary mt-4">  <%= link_to "Back to Posts", posts_path%>   </button>