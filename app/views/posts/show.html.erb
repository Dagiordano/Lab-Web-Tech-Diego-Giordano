<div class="row "> 
  <div class="col">

    <h2 class="blog-post-title"><%= @post.title %></h2>
    <h1 class="lead"><%= @post.user.name %></h1>
    <p class=""><%= @post.content %></p>

  </div>
</div>







<h2 class="blog-post-title">Sample blog post</h2>








<p>
    <% @post.tags.each do |tag| %>
    <%= tag.name %>
  <% end %>

<hr>
<h2 class="m-4">Comments</h2>
<%= render @post.comments%>
    


<div class="container">
  <% if user_signed_in? %>
            <button type="button" class="btn btn-outline-info mt-4"> <%= link_to "Add Comment", new_post_comment_path(@post) %> </button>


  <% if user_signed_in? && current_user == @post.user %>
  <button type="button" class="btn btn-outline-info mt-4"><%= link_to "Edit Post", edit_post_path(@post) %></button>

  <%= link_to "Destroy", post_path(@post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
<% end %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          <% end %>



  
  
  

  <button type="button" class="btn btn-outline-secondary mt-4">  <%= link_to "Back to Posts", posts_path%>   </button>
</div>

